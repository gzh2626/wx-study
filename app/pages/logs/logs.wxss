  .fenLei{
    display: flex;
    background: #fff;
    justify-content: space-between;
  }
  .fenLei>view{
    display: inline-block;
    text-align: center;
    width: 25%;
  }
   .fenLei image{
     width: 100%;
     height: 80rpx;
   }
   .fenLei text{
     font-size: 24rpx;
   }
   .fenlei1{
    padding: 30rpx;
   }
   .fenlei2{
     padding: 0 30rpx 30rpx;
   }
   .hot1{
     text-align: center;
     background: #fff;
     padding: 0rpx 0 30rpx;
     margin-top: 20rpx;
   }
   .hot{
     width: 31rpx;
     height: 31rpx;
     vertical-align: middle;
     margin-right: 10rpx;
   }
   .djbk{
     font-size: 28rpx;
   }
   .scroll{
     background: #fff;
     display: flex;
     flex-wrap: nowrap;
     flex-direction: row;
     padding-left:30rpx;
     padding-bottom: 20rpx;
   }
   .item{
     display: inline-block;
     margin: 0 20rpx;
   }
   .item>view{
     text-align: center;
     font-size: 24rpx;
   }
   .item:first-of-type{
     margin-left: 15rpx;
   }
   .img>image{
      width: 160rpx;
      height: 130rpx;
   }
   .name{
     display: flex;
     flex-direction: column;
   }
   .img{
     background: #f4f5f6;
     margin-bottom: 20rpx;
   }
   .name>text{
      overflow:hidden; 
    text-overflow:ellipsis;
    white-space:nowrap; 
     width: 160rpx;
   }
   .name>text:last-child{
     color: #ffa800;
     font-size: 26rpx;
     
     }
     .tuijian1{
       padding: 0 30rpx;
     }
     .tuijian{
       display: flex;
       padding: 20rpx 0 0;
      background: #fff;
      border-bottom: 1rpx solid #e8e8e8;
     }
     .tuiJian-img{
       flex: 1
     }
     .tuiJian-img>image{
       width: 170rpx;
       height: 170rpx;
       border-radius: 5rpx;
     }
     .tuiJian-text{
       flex: 3;
       font-size: 30rpx;
       padding: 15rpx 0 20rpx 20rpx;
       box-sizing: border-box;
     }
     .tuijian-money{
       display: flex;
       justify-content: space-between;
       margin-top: 30rpx;
     }
     .add{
       display: flex;
     }
     .plus,.redu{
       width: 45rpx;
       height: 45rpx;
       border:5rpx solid #0097ff;
       border-radius: 50%;
       color: #0097ff;
       line-height: 45rpx;
       text-align: center;
     }
     .num{
       line-height: 45rpx;
       margin: 0 15rpx;
     }
     .money{
       color: #ffa800;
     }
     .add input{
       width: 40rpx;
       padding-left: 15rpx;
     }
     .plus{
       background: #0097ff;
       color: #fff;
     }