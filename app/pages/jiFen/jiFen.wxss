.cont{
  height: 100vh;
}
.jifen{
  height: 260rpx;
  text-align: center;
  position: relative;
}
.f3{
  width: 100%;
  height: 20rpx;
  background: #f4f5f6;
}
.jifen>image{
  height: 103rpx;
  width: 513rpx;
  margin-top: 40rpx;
}
.fen{
  position: absolute;
  top:40rpx;
  width: 100%;
}
.fen>view:first-child{
  color: #0097ff;
  font-size: 72rpx;
  font-weight: bold;
}
.fen>view:nth-child(2){
  font-size: 22rpx;
  color: #999;
}
.fen>button{
  width: 220rpx;
  height: 55rpx;
  line-height: 55rpx;
  color: #fff;
  background: #fd9900;
  border:none;
  margin-top: 30rpx;
  font-size: 24rpx;
}
.detail>view:first-of-type{
  text-align: center;
  font-size: 30rpx;
  color: #999;
  height: 120rpx;
  line-height: 120rpx;
}
.mingXi{
  display: flex;
  font-size: 26rpx;
  color: #333;
  justify-content: space-between;
  align-items: center;
  height: 120rpx;
  border-bottom: 1rpx solid #e8e8e8;
}
.time{
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}
.xi{
  font-size: 30rpx;
  color: #0097ff;
  font-weight: bold;
}
.show-btn {
  margin-top: 100rpx;
  color: #22cc22;
}

.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-dialog {
  width: 540rpx;
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 0;
  z-index: 9999;
  background: #fff;
  margin: -180rpx 105rpx;
  height: 260rpx;
  border-radius: 30rpx;
}

.modal-title {
  padding-top: 35rpx;
  font-size: 34rpx;
  color: #333;
  text-align: center;
}
.modal-content {
  padding: 40rpx 32rpx;
  display: flex;
  justify-content: space-around;
  font-size: 24rpx;
}

.modal-input{
  display: flex;
  align-items: center;
} 
.input {
  width:180rpx;
  height: 60rpx;
  font-size: 28rpx;
  line-height: 28rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  border-radius: 26rpx;
  color: #333;
  background: #fafafa;
  border:1rpx solid #333;
  margin-right: 10rpx;
}

input-holder {
  color: #666;
  font-size: 28rpx;
}
.foot{
  font-size: 24rpx;
  color: #999;
  text-align: center;
}
.btn-confirm {
  width: 120rpx;
  height: 60rpx;
  background: #fd9900;
  color: #fff;
  text-align: center;
  border-radius: 6rpx;
  line-height: 60rpx;
  font-size: 24rpx;
  margin-left: 40rpx;
}